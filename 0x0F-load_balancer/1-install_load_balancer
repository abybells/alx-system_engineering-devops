#!/usr/bin/env bash
# Configures a new Ubuntu server with a HAproxy load-balancer
sudo apt-get -y update
sudo apt-get -y install haproxy
sudo sed -i "$ a\\\nlisten thenabverse\n\tmode http\n\tbind *:80\n\tbalance roundrobin\n\toption http-keep-alive\n\toption forwardfor\n\tserver 18348-web-01 44.200.137.216:80 check\n\tserver 18348-web-02 18.206.238.153:80 check" /etc/haproxy/haproxy.cfg
sudo sed -i '/#EXTRAOPTS="-de -m 16"/a ENABLED=1' /etc/default/haproxy
sudo service haproxy start
